header {
  position: fixed;
  z-index: 1;
  top: 0px;
  width: 100%;
  height: 10vh;
  -webkit-box-shadow: 0px 0px 15px -10px #000000;
  box-shadow: 0px 0px 15px -10px #000000;
}

header .info {
  display: flex;
  justify-content: end;
  align-items: center;
  width: 100%;
  height: 100%;
}

header .info div {
  display: flex;
  justify-content: center;
  align-items: center;
}

header .info div .span {
  display: flex;
  justify-content: start;
  align-items: center;
  flex-wrap: wrap;
}

header .info div .span div {
  text-align: start;
}

header .info img {
  width: 50px;
  height: 50px;
  border-radius: 50%;
}

header .info .name,
header .info .title {
  display: flex;
  justify-content: start;
  align-items: center;
  padding-left: 5px;
  width: 100%;
}

header .info .name span,
header .info .title span {
  text-align: start;
}

header .info .name span {
  font-size: 16px;
  font-weight: bold;
}

header .info .title span {
  font-size: 12px;
  color: var(--brand-color);
}

.main {
  position: fixed;
  height: 85vh;
  width: 95vw;
  top: 10vh;
  left: 5vw;
  height: 90vh;
  z-index: -1;
  background: var(--main-color);
}

.main div {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

.aside {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  width: 10vw;
  min-width: 220px;
  /* padding-left: 15vw; */
  background: var(--aside-color);
  -webkit-box-shadow: 0px 5px 15px -10px #000000;
  box-shadow: 0px 5px 15px -10px #000000;
}

.aside .list {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  gap: 15px;
  margin-top: -110px;
}

.aside .list ol .title {
  padding-bottom: 55px;
  font-weight: bold;
  font-size: 17px;
}

.aside .list ol .active {
  color: var(--brand-color);
}

.aside .list ol a {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  list-style: none;
  text-decoration: none;
  padding-bottom: 25px;
  font-weight: bold;
  color: #000;
}

.aside .list ol li {
  display: flex;
  justify-content: start;
  align-items: center;
  padding-left: 25px;
  width: 100%;
  gap: 15px;
}

.container-main {
  display: flex;
  justify-content: center;
  align-items: center;
  min-width: 85vw;
}

.container-main .tasks {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  margin: 0 auto;
  width: 33vw;
  height: 70%;
  // border: 1px solid red;
}

.addTasks {
  position: fixed;
  width: 75px;
  height: 75px;
  bottom: 25px;
  right: 25px;
  background: var(--green-color);
  border-radius: 50%;
  border: none;
}

.tasks .title {
  display: flex;
  justify-content: start;
  align-items: center;
  width: 100%;
  height: 3vh;
}

.tasks .title span {
  font-weight: bold;
  font-size: 25px;
}

.tasks .description {
  display: flex;
  justify-content: start;
  align-items: center;
  width: 100%;
  height: 3vh;
  font-weight: bold;
  color: #7a8ca0;
}

.tasks .name, .tasks .quantity {
  color: var(--brand-color);
}

.tasks .quantity {
  text-decoration: underline;
}

.tasks .search {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 3.5vh;
  margin-top: 15px;
  gap: 10px;
  border: 2px solid #bfdaeb;
  border-radius: 10px;
  padding: 10px;
}

.tasks .search input {
  width: 100%;
  height: 100%;
  border: none;
  outline: none;
  background: var(--main-color);
  color: #bfdaeb;
  font-size: 17px;
  font-weight: bold;
}

.tasks .search input::placeholder {
  color: #bfdaeb;
}

.task {
  display: flex;
  justify-content: center;
  align-content: center;
  width: 100%;
  height: 100%;
  min-height: 5vh !important;
  overflow-x: auto;
  margin-top: 30px;
}

.task ol {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  list-style: none;
  width: 100%;
  height: 3vh;
  gap: 75px;
}

.task ol li {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 7vh;
  border-radius: 5px;
  background-color: var(--light-color);
  -webkit-box-shadow: 0px 0px 15px -10px #000000;
  box-shadow: 0px 0px 15px -10px #000000;
  margin-top: -285px;
}

.task ol li div {
  border: 1px solid red;
}

ol li .input {
  width: 30px;
  height: 30px;
  padding: 10px;
}

.checkbox {
  width: 25px;
  height: 25px;
  border: 1px solid #e9f4fb;
  outline: none;
}

.checkbox:checked {
  background-color: #1ad18f;
  color: var(--green-color);
}

ol li .title-task {
  display: flex;
  justify-content: start;
  align-items: center;
  width: 3800px;
  padding-left: 10px;
  flex-wrap: nowrap;
}

ol li .title-task span {
  font-weight: bold;
}
